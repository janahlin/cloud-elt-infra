# Terraform variables for Azure deployment in dev environment
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Common variables
cloud_provider = "azure"
# Use a hardcoded environment value to avoid recursive loops
environment = "dev"
use_airflow = false
resource_prefix = "elt"
vpc_cidr = "10.0.0.0/16"
subnet_count = 3

# Azure specific variables
azure_subscription_id = "{{ vault_azure_subscription_id }}"
azure_client_id = "{{ vault_azure_client_id }}"
azure_client_secret = "{{ vault_azure_client_secret }}"
azure_tenant_id = "{{ vault_azure_tenant_id }}"
azure_location = "{{ azure_location | default('westeurope') }}"

# Azure resource configuration
azure_resource_group_name = "elt-dev-rg"
azure_storage_account_name = "eltdevsa"
azure_virtual_network_name = "elt-dev-vnet"
azure_subnet_name = "elt-dev-subnet"
azure_vm_name = "elt-dev-vm"
azure_vm_size = "Standard_B1s"
azure_vm_os_disk_size_gb = 30
azure_vm_admin_username = "adminuser"
storage_tier = "Standard_LRS"
databricks_sku = "{{ databricks_sku | default('premium') }}"

# Azure storage configuration
azure_storage_account_tier = "Standard"
azure_storage_min_tls_version = "TLS1_2"
azure_storage_container_access_type = "private"

# SSH key (truncated to avoid tag value length issues)
ssh_public_key = "{{ ssh_public_key | default('your-ssh-public-key') }}"
