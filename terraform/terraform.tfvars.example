# Common variables
cloud_provider = "azure"  # or "oci"
environment = "dev"
resource_prefix = "elt"
vpc_cidr = "10.0.0.0/16"
subnet_count = 3

# Azure variables (required if cloud_provider = "azure")
azure_subscription_id = "your-subscription-id"
azure_client_id = "your-client-id"
azure_client_secret = "your-client-secret"
azure_tenant_id = "your-tenant-id"
azure_location = "eastus"
storage_tier = "Standard_LRS"
databricks_sku = "premium"
vm_size = "Standard_D4s_v3"

# OCI variables (required if cloud_provider = "oci")
oci_tenancy_ocid = "your-tenancy-ocid"
oci_user_ocid = "your-user-ocid"
oci_fingerprint = "your-api-key-fingerprint"
oci_private_key_path = "~/.oci/oci_api_key.pem"
oci_region = "us-ashburn-1"
compute_shape = "VM.Standard2.4"
ssh_public_key = "your-ssh-public-key-content"
ssh_private_key_path = "~/.ssh/id_rsa"